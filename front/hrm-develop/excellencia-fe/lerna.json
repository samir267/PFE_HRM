{
  "version": "0.0.0",
  "npmClient": "npm",
  "useWorkspaces": true,
  "packages": ["packages/*"],
  "command": {
    "run": {
      "stream": true,
      "parallel": true,
      "npmClient": "npm"
    },
    "bootstrap": {
      "hoist": true,
      "npmClientArgs": ["--no-package-lock"]
    }
  },
  "ignoreChanges": [
    "**/*.md",
    "**/test/**",
    "**/*.test.ts",
    "**/*.test.tsx"
  ]
}