# .env.production
NODE_ENV=production
PORT=4000
DATABASE_BASE_URL=mongodb://prod-db-host:27017
DB_NAME=myapp_prod
# DB_USER, DB_PASSWORD, JWT_SECRET fetched from Vault
JWT_EXPIRES_IN=1d
CORS_ORIGIN=https://myapp.com
CORS_METHODS=GET,POST,PUT,DELETE
RUN_MIGRATIONS_ON_STARTUP=false
SEED_ON_STARTUP=false
USE_VAULT=true
VAULT_ENDPOINT=https://vault.mycompany.com:8200
VAULT_TOKEN= # Leave blank here; injected via CI/CD
ENCRYPTION_KEY= # Injected via CI/CD or Vault
LOCK_TIMEOUT_MS=60000